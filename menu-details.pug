doctype html
html(lang="ru")
	head
		meta(charset="urf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=none")
		title Menu Details | Gratia
		link(href="css/bootstrap.min.css", rel="stylesheet")
		link(href="css/animate.min.css", rel="stylesheet")
		link(rel="stylesheet", href="css/hamburgers.min.css")
		link(rel="stylesheet", href="css/owl.carousel.min.css")
		link(rel="stylesheet", href="css/owl.theme.default.min.css")
	body
		section.header-section <!-- header section -->
			nav.navbar.navbar-expand-lg.navbar-light
				div.col-12.d-flex.flex-lg-row.flex-column.justify-content-between
					div.d-flex.d-block.flex-row.justify-content-between
						a.navbar-brand(href="#")
							img.img-fluid(src="img/logo.png", alt="")
						button.hamburger.hamburger--collapse.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
							div.hamburger-box
								span.hamburger-inner
					div.collapse.navbar-collapse#navbarNav.align-self-center
						div.navbar-nav.ml-auto
							a.nav-item.nav-link(href="#") About
							a.nav-item.nav-link.active(href="#") Menu
							a.nav-item.nav-link(href="#") Gallery
							a.nav-item.nav-link(href="#") Contact
		section.menu-section
			div.container
				div.col.menu-section__caption
					h1 Menu
					p Lorem ipsum dolor sit amet, consectetur adipiscing elit.
				div.col-xl-10.offset-xl-1.col-lg-12.offset-lg-0
					div.menu-section__card.d-flex.flex-lg-row.flex-column.flex-grow-1.flex-basis-0
							div.menu-section__card-img
								img.img-fluid(src="img/chicken-burger.jpg", alt="")
							div.menu-section__card-text.d-flex.flex-column.justify-content-between
								div.menu-section__card-title
									h2 Chicken burger
									p Lorem ipsum dolor sit amet, consectetur adipiscing elit.
								div.menu-section__card-description.d-flex.flex-lg-row.flex-column.justify-content-between
									div.align-self-center
										h6 Components
									div
										p chicken breast fillet, marinated overnight accompained with tomato cos lettuce & Spanish red onion
								div.menu-section__card-price.d-flex.justify-content-center
									div
										span 5$
										p Total cost
		section.footer-section
			div.footer-section__fork
			div.footer-section__caption
				h6 Gratia Restaurant
				p Copyright 2016. All rights reserved by symu
			div.footer-section__social-icons.d-flex.justify-content-center
				div
					a(href="#")
						img(src="img/facebook-icon.png", alt="")
				div
					a(href="#")
						img(src="img/twitter-icon.png", alt="")
				div
					a(href="#")
						img(src="img/instagram-icon.png", alt="")

		script(type="text/javascript", src="js/jquery.min.js")
